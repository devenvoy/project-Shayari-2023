<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mashbg"
    android:orientation="vertical"
    tools:context=".Categories">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="#74A4FD">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/abcd"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/backbtn"
            android:fontFamily="@font/artifexcf_book"
            android:gravity="left|center"
            android:text="Shayari 2023"
            android:textColor="#AEF9FE"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/roundCardView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/abcd"
            android:elevation="0dp"
            app:cardCornerRadius="22.5dp">

            <ImageView
                android:id="@+id/usericon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/life" />


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:dividerColor="@color/black" />

    <GridView
        android:id="@+id/categoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2" />

</LinearLayout>